<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/default_view_bg">    <EditText        android:id="@+id/edit_text"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:paddingTop="10dp"        android:paddingBottom="10dp"        android:paddingLeft="10dp"        android:text="100"        android:gravity="right|center"        android:inputType="numberDecimal"        android:textColor="@color/select_text_color"        android:textSize="@dimen/default_text_size"        android:background="@color/transparent" />    <TextView        android:layout_alignParentRight="true"        android:id="@+id/unit_text"        android:textColor="@color/select_text_color"        android:textSize="@dimen/default_text_size"        android:gravity="center"        android:paddingTop="5dp"        android:paddingBottom="5dp"        android:paddingRight="5dp"        android:text="万元"        android:background="@color/transparent"        android:layout_width="wrap_content"        android:layout_height="match_parent" /></RelativeLayout>