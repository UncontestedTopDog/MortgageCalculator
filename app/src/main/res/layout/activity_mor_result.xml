<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <RelativeLayout        android:background="@color/app_theme_color"        android:layout_width="match_parent"        android:layout_height="50dp">        <ImageButton            android:id="@+id/back"            android:src="@drawable/back"            android:background="@color/transparent"            android:scaleType="centerInside"            android:padding="10dp"            android:layout_width="50dp"            android:layout_height="match_parent" />        <TextView            android:id="@+id/detail"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:gravity="center"            android:text="详情结果"            android:textColor="@color/white"            android:textSize="18dp" />    </RelativeLayout>    <android.support.v7.widget.RecyclerView        android:id="@+id/result_detail_list"        android:layout_width="match_parent"        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView></LinearLayout>