<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_column="4"    android:background="@color/white"    android:orientation="vertical">    <TextView        android:id="@+id/time"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/gray_background"        android:padding="5dp"        android:text="2109-06-26 23:58:15"        android:textColor="@color/gray_text_color"        android:textSize="15dp" />    <GridLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="5dp"        android:columnCount="5"        android:rowCount="5">        <TextView            style="@style/gridtextitemstyle"            android:layout_column="1"            android:layout_row="1"            android:text="商业贷" />        <TextView            android:id="@+id/com_loan"            style="@style/gridtextbolditemstyle"            android:layout_column="1"            android:layout_row="2"            android:text="100万" />        <TextView            style="@style/gridtextitemstyle"            android:layout_column="2"            android:layout_row="1"            android:text="公积金贷" />        <TextView            android:id="@+id/fund_loan"            style="@style/gridtextbolditemstyle"            android:layout_column="2"            android:layout_row="2"            android:text="0万"/>        <TextView            style="@style/gridtextitemstyle"            android:layout_column="3"            android:layout_row="1"            android:text="贷款年限"/>        <TextView            android:id="@+id/repayment"            style="@style/gridtextbolditemstyle"            android:layout_column="3"            android:layout_row="2"            android:text="20年"/>        <TextView            style="@style/gridtextitemstyle"            android:layout_column="4"            android:layout_row="1"            android:text="还款类型"/>        <TextView            android:id="@+id/repayment_type"            style="@style/gridtextbolditemstyle"            android:layout_column="4"            android:layout_row="2"            android:text="等额本息"/>        <TextView            style="@style/gridtextitemstyle"            android:layout_column="1"            android:layout_row="3"            android:text="每月还款"/>        <TextView            android:id="@+id/each_pay"            style="@style/gridtextbolditemstyle"            android:layout_column="1"            android:layout_row="4"            android:text="6544"/>        <TextView            style="@style/gridtextitemstyle"            android:layout_column="2"            android:layout_row="3"            android:text="总利息"/>        <TextView            android:id="@+id/all_interest"            style="@style/gridtextbolditemstyle"            android:layout_column="2"            android:layout_row="4"            android:text="57万"/>        <TextView            style="@style/gridtextitemstyle"            android:layout_column="3"            android:layout_row="3"            android:text="总还款"/>        <TextView            android:id="@+id/all_pay"            style="@style/gridtextbolditemstyle"            android:layout_column="3"            android:layout_row="4"            android:text="157万"/>        <TextView            style="@style/gridtextitemstyle"            android:layout_column="4"            android:layout_row="3"            android:text="每月递减"/>        <TextView            android:id="@+id/each_decrease"            style="@style/gridtextbolditemstyle"            android:layout_column="4"            android:layout_row="4"            android:text="0"/>    </GridLayout></LinearLayout>