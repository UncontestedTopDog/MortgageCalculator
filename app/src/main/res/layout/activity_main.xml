<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#282828"    tools:context=".MortgageActivity">    <LinearLayout        android:id="@+id/main_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="15dp"        android:layout_marginRight="15dp"        android:orientation="vertical">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="@dimen/default_item_height"            android:paddingBottom="@dimen/first_bottom_padding"            android:paddingTop="@dimen/first_top_padding">            <TextView                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:gravity="center_vertical"                android:text="贷款类型"                android:textColor="@color/leftTextColor"                android:textSize="@dimen/default_text_size" />            <com.example.huangweiliang.mortgagecalculator.SelectorView                android:id="@+id/mortgage_type"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="4"                app:firstItemText="商业"                app:itemSum="3"                app:secondItemText="公积金"                app:thirdItemText="组合"></com.example.huangweiliang.mortgagecalculator.SelectorView>        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="@dimen/default_item_height"            android:paddingBottom="@dimen/first_bottom_padding"            android:paddingTop="@dimen/first_top_padding">            <TextView                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_centerVertical="true"                android:layout_weight="1"                android:gravity="center_vertical"                android:text="还款方式"                android:textColor="@color/leftTextColor"                android:textSize="@dimen/default_text_size" />            <com.example.huangweiliang.mortgagecalculator.SelectorView                android:id="@+id/repayment_type"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="4"                app:firstItemText="等额本息"                app:itemSum="2"                app:secondItemText="等额本金"></com.example.huangweiliang.mortgagecalculator.SelectorView>        </LinearLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="@dimen/default_item_height"            android:paddingBottom="@dimen/first_bottom_padding"            android:paddingTop="@dimen/first_top_padding">            <LinearLayout                android:id="@+id/compose_repayment_layout"                android:layout_width="match_parent"                android:layout_height="@dimen/default_item_height"                android:orientation="horizontal"                android:visibility="gone">                <TextView                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_centerVertical="true"                    android:layout_weight="1"                    android:gravity="center_vertical"                    android:text="商业贷款"                    android:textColor="@color/leftTextColor"                    android:textSize="@dimen/default_text_size" />                <LinearLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="4">                    <com.example.huangweiliang.mortgagecalculator.UnitEditText                        android:id="@+id/commercial_et"                        android:layout_width="90dp"                        android:layout_height="match_parent"                        android:background="@drawable/default_view_bg"                        app:text="100"                        app:unit="万元" />                    <TextView                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_centerVertical="true"                        android:layout_marginRight="10dp"                        android:layout_weight="1"                        android:gravity="center"                        android:text="公积金"                        android:textColor="@color/leftTextColor"                        android:textSize="@dimen/default_text_size" />                    <com.example.huangweiliang.mortgagecalculator.UnitEditText                        android:id="@+id/provident_fund_et"                        android:layout_width="90dp"                        android:layout_height="match_parent"                        android:background="@drawable/default_view_bg"                        app:text="100"                        app:unit="万元" />                </LinearLayout>            </LinearLayout>            <LinearLayout                android:id="@+id/single_repayment_layout"                android:layout_width="match_parent"                android:layout_height="@dimen/default_item_height"                android:visibility="visible">                <TextView                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_centerVertical="true"                    android:layout_weight="1"                    android:gravity="center_vertical"                    android:text="贷款总额"                    android:textColor="@color/leftTextColor"                    android:textSize="@dimen/default_text_size" />                <com.example.huangweiliang.mortgagecalculator.UnitEditText                    android:id="@+id/single_et"                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="4"                    android:background="@drawable/default_view_bg"                    android:focusable="false"                    app:text="100"                    app:unit="万元" />            </LinearLayout>        </RelativeLayout>        <View            android:layout_width="match_parent"            android:layout_height="1dp"            android:layout_marginTop="10dp"            android:background="#1a1a1a" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:layout_marginTop="10dp">            <TextView                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="1"                android:text="贷款期限"                android:textColor="@color/leftTextColor"                android:textSize="@dimen/default_text_size" />            <TextView                android:id="@+id/mortgage_time"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="4"                android:text="20年"                android:textColor="@color/selectTextColor"                android:textSize="@dimen/default_text_size" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:layout_marginTop="10dp"            android:gravity="center_vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginRight="5dp"                android:gravity="left"                android:text="0.5"                android:textColor="@color/leftTextColor"                android:textSize="@dimen/default_text_size" />            <SeekBar                android:id="@+id/time_seek"                style="?android:attr/progressBarStyleHorizontal"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="10"                android:max="59"                android:maxHeight="10dp"                android:minHeight="10dp"                android:progress="39"                android:progressDrawable="@drawable/common_progressbar"                android:thumb="@drawable/common_thumb" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:gravity="right"                android:text="30"                android:textColor="@color/leftTextColor"                android:textSize="@dimen/default_text_size" />        </LinearLayout>        <View            android:layout_width="match_parent"            android:layout_height="1dp"            android:layout_marginTop="5dp"            android:background="#1a1a1a" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="@dimen/default_item_height"            android:paddingBottom="@dimen/first_top_padding"            android:paddingTop="@dimen/first_bottom_padding">            <TextView                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:gravity="center_vertical"                android:text="贷款利率"                android:textColor="@color/leftTextColor"                android:textSize="@dimen/default_text_size" />            <LinearLayout                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="4"                android:orientation="horizontal">                <RelativeLayout                    android:layout_width="80dp"                    android:layout_height="match_parent">                    <TextView                        android:id="@+id/fund_rate"                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:gravity="right|center"                        android:text="3.25%"                        android:textColor="@color/chooseTextColor"                        android:textSize="@dimen/default_text_size"                        android:visibility="gone" />                    <com.example.huangweiliang.mortgagecalculator.UnitEditText                        android:id="@+id/commercial_rate"                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        app:text="4.90"                        app:unit="%" />                </RelativeLayout>                <TextView                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:layout_marginLeft="5dp"                    android:layout_marginRight="5dp"                    android:gravity="center"                    android:text="×"                    android:textColor="@color/chooseTextColor"                    android:textSize="@dimen/default_text_size" />                <com.example.huangweiliang.mortgagecalculator.UnitEditText                    android:id="@+id/addition"                    android:layout_width="80dp"                    android:layout_height="match_parent"                    android:layout_marginRight="5dp"                    app:text="1.0"                    app:unit="倍" />                <TextView                    android:id="@+id/rate_result"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:gravity="center"                    android:text="=4.9%"                    android:textColor="@color/chooseTextColor"                    android:textSize="@dimen/default_text_size" />            </LinearLayout>        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="@dimen/default_item_height">            <TextView                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:gravity="center"                android:text="当前年限基准："                android:textColor="@color/unChooseTextColor"                android:textSize="@dimen/default_text_size" />            <RelativeLayout                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1">                <TextView                    android:id="@+id/commercial_standard_rate"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:gravity="center"                    android:text="商业 4.90%"                    android:textColor="@color/unChooseTextColor"                    android:textSize="@dimen/default_text_size" />                <TextView                    android:id="@+id/fund_standard_rate"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:layout_alignParentRight="true"                    android:gravity="center"                    android:text="公积金 3.25%"                    android:textColor="@color/unChooseTextColor"                    android:textSize="@dimen/default_text_size" />            </RelativeLayout>        </LinearLayout>        <View            android:layout_width="match_parent"            android:layout_height="1dp"            android:layout_marginTop="5dp"            android:background="#1a1a1a" />        <Button            android:id="@+id/calculator"            android:layout_width="match_parent"            android:layout_height="@dimen/default_item_height"            android:background="@drawable/default_btn_bg"            android:text="马上计算"            android:textColor="#FFFFFFFF"            android:textSize="@dimen/default_btn_text_size" />    </LinearLayout></RelativeLayout>