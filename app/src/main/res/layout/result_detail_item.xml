<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <LinearLayout        android:id="@+id/item_data"        android:background="@color/gray_background"        android:layout_width="match_parent"        android:layout_height="40dp"        android:orientation="horizontal"        android:weightSum="5">        <TextView            android:id="@+id/repayment"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_margin="5dp"            android:layout_weight="1"            android:gravity="center"            android:lines="1"            android:text="1"            android:textSize="12dp"            android:textColor="@color/textBlack" />        <TextView            android:id="@+id/pay"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_margin="5dp"            android:layout_weight="1"            android:gravity="center"            android:lines="1"            android:text="6544.44"            android:textSize="12dp"            android:textColor="@color/textBlack" />        <TextView            android:id="@+id/principal"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_margin="5dp"            android:layout_weight="1"            android:gravity="center"            android:lines="1"            android:text="2461.11"            android:textSize="12dp"            android:textColor="@color/textBlack" />        <TextView            android:id="@+id/interest"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_margin="5dp"            android:layout_weight="1"            android:gravity="center"            android:lines="1"            android:text="4083.33"            android:textSize="12dp"            android:textColor="@color/textBlack" />        <TextView            android:id="@+id/residualLoan"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_margin="5dp"            android:layout_weight="1"            android:gravity="center"            android:lines="1"            android:text="997,538.89"            android:textSize="12dp"            android:textColor="@color/textBlack" />    </LinearLayout>    <View        android:layout_below="@+id/item_data"        android:background="@color/gray_background"        android:layout_width="match_parent"        android:layout_height="1dp"/></RelativeLayout>