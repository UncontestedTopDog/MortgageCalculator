<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/default_view_bg">            <ImageView                android:id="@+id/choose_view"                android:layout_width="100dp"                android:layout_height="match_parent"                android:padding="2dp"                android:src="@drawable/default_select_bg" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <TextView            android:id="@+id/first_choose"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:textColor="@color/chooseTextColor"            android:visibility="gone"            android:textSize="@dimen/default_text_size" />        <TextView            android:id="@+id/second_choose"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:textColor="@color/unChooseTextColor"            android:visibility="gone"            android:textSize="@dimen/default_text_size" />        <TextView            android:id="@+id/third_choose"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:textColor="@color/unChooseTextColor"            android:visibility="gone"            android:textSize="@dimen/default_text_size" />    </LinearLayout></RelativeLayout>