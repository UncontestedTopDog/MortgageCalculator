<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/default_view_bg">    <LinearLayout        android:id="@+id/choose_layout"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:weightSum="3">        <ImageView            android:id="@+id/first_choose_view"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:padding="2dp"            android:visibility="gone"            android:src="@drawable/default_select_bg" />        <ImageView            android:id="@+id/second_choose_view"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:padding="2dp"            android:visibility="gone"            android:src="@drawable/default_select_bg" />        <ImageView            android:id="@+id/third_choose_view"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:padding="2dp"            android:visibility="gone"            android:src="@drawable/default_select_bg" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <TextView            android:id="@+id/first_choose"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:textColor="@color/select_text_color"            android:textSize="@dimen/default_text_size"            android:visibility="gone" />        <TextView            android:id="@+id/second_choose"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:textColor="@color/unselect_text_color"            android:textSize="@dimen/default_text_size"            android:visibility="gone" />        <TextView            android:id="@+id/third_choose"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:textColor="@color/unselect_text_color"            android:textSize="@dimen/default_text_size"            android:visibility="gone" />    </LinearLayout></RelativeLayout>